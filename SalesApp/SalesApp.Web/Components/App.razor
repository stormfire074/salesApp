            let resizeTimeout;
        window.addResizeListener = (dotNetHelper) => {
            window.addEventListener('resize', () => {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(() => {
                    dotNetHelper.invokeMethodAsync('OnResize');
                }, 150); // Debounce resize event
            });
        };

